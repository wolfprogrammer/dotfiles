#ifndef	_commdefs_h
#define _commdefs_h

#define C99_2

//C99 standard data types
#ifdef C99
	//Unsigned =>Sem sinal
	#define uint8_t 	unsigned char
	#define uint16_t	unsigned int
	#define uint32_t	long
	
	//Signed =>Com sinal
	#define int8_t	signed char
	#define int16_t	signed int
	#define int32_t signed long
#endif

//C99 standard data types second form
#ifdef C99_2
	#define u8  unsigned char
	#define u16 unsigned int
	#define u32 long
	#define i8	signed char
	#define i16 signed int
	#define i32 signed long
#endif

//Logical defines
#define  TRUE   1
#define  FALSE  0
#define  true   TRUE
#define  false  FALSE


// Common bit define
#define ON    1			// Ligado
#define OFF   0			// Desligado
#define HIGH  1			//Nível alto
#define LOW	  0			//Nível baixo


// Timer0 prescaler configurations
#define  tmr0_1p1      0b00001000	// Sem prescaler
#define  tmr0_1p2      0b00000000	// Préscaler de 1/2
#define  tmr0_1p4      0b00000001
#define  tmr0_1p8      0b00000010
#define  tmr0_1p16     0b00000011
#define  tmr0_1p32     0b00000100
#define  tmr0_1p64     0b00000101
#define  tmr0_1p128    0b00000110
#define  tmr0_1p256    0b00000111



#endif  // commdefs_h
