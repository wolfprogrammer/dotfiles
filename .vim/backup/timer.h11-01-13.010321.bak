#ifndef _timer_h_
#define _timer_h_

#include "default.h"
							  



/*!
 *  \brief Delay x instructions cycle time
 *
 *  \f$ Tdelay= 4 Ticks / Fclock \f$
 *
 * \param x     : The number of ticks,(instruction cycles)  to delay 0 to 255
 * \return void
 *
 */
void delay1TCYx(u8 x){	
	while(--x);
}


//
//	Delay in multiple of 10 instruction cycle
//
void delay10TCYx(u8 x){
		u8 i=10;
		while(--i) delay1TCYx(x);
}



//	Delay in multiple of 100 instruction cycle
//
void delay100TCYx(u8 x){
		u8 i=100;
		while(--i) delay1TCYx(x); // Termina quando i for 0
}



//
//	Delay in multiple of 1000 instruction cycle
//
void delay1KTCYx(u8 x){
		u8 i=100;
		while(--i) delay10TCYx(x); // Termina quando i for 0
}

//
//	Delay in multiple of 10000
//
void delay10KTCYx(u8 x){
		u8 i=10;
		while(--i) delay1KTCYx(x); // Termina quando i for 0
}


#endif
