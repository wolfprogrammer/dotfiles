#!/bin/bash 
echo "Fix the FTDI driver"
echo " Log as root"
echo "Connect the FTDI to USB"
read -p " Press Any Key to Continue"

dmesg | tail  

udevadm info --attribute-walk -n /dev/ttyUSB0 | grep -e 'ATTRS{serial}' | grep -e '\w\{8\}'

echo "Substitua o nome acima no arquivo a ser aberto e salve"

echo "SUBSYSTEM=="tty", ATTRS{serial}=="ABCDEFGH", GROUP="users", MODE="0666", SYMLINK+="buspirate""  > /etc/udev/10-buspirate.rules
leafpad   /etc/udev/10-buspirate.rules 

udevadm control --reload-rules
