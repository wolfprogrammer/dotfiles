
pack=Win7.tar.gz

DEST=/media/windows

#Junta as partes
echo "Juntando as partes, espere um pouco ..."
sleep 3
cat xaa xab xac > $DEST/$pack


#Descompacta na partiçao do windows
echo "Descompactando , espere mais um pouco, vá tomar um café ..."
sleep 3
tar -xvzf $DEST/$pack -C $DEST

#Remove pacote
echo "Removendo arquivo da instalação ..."
sleep 3
rm -rf $pack

