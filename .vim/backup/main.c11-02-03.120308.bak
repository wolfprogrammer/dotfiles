// Imprime número na UART de zero a 255
void print_num(u8 num){

		u8 alg0,alg1,alg2;
		
				alg2=num/100+'0';  		//Mais significativo , most significative
				alg1=num%100/10+'0';	//Second algarism
				alg0=num%10+'0';

				sendchar(alg2);
				sendchar(alg1);
				sendchar(alg0);
}



