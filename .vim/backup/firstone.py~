#!/usr/bin/env python
# -*- coding: utf-8 -*- 

import curses

screen= curses.initscr() # 
curses.noecho()   	 # Stop curses from outputting the key pressed in the screen
curses.curs_set(0)	 # Removes cursor from screen
curses.start_color()
curses.init_pair(1, curses.COLOR_GREEN, curses.COLOR_BLACK)
screen.keypad(1)



top_pos=12
left_pos=12

screen.addstr(top_pos,left_pos,"Positioned string",curses.color_pair(1))


#-------------- Curses envent handling --------------#
#
#
while True:
	screen.addstr(2,2,"Please Enter a number...")
	screen.addstr(4,4,"1 - Add a user")
	screen.addstr(5,4,"3 - Show disk space")
	screen.addstr(6,4,"5 - Search google")
	screen.addstr(10,4,"6 - Call Ipython")
	event= screen.getch()
	if event==ord("q"):break	# If pressed "q" key the , 
					#break the loop and finish the program
	elif event == ord("p"):
		#screen.clear()
		screen.addstr(top_pos+2,left_pos,"User pressed p")

	elif event == curses.KEY_DOWN:  
		screen.clear()
		screen.addstr("You pressed DOWN")


# KEY_UP , KEY_LEFT , KEY_BACKSPACE , KEY_RIGHT     	                          

# Make sure that when the execution finish, finish the terminal
#
curses.endwin()
