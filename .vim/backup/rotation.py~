from pylab import *
ion()
#from IPython import embed; 


def sind(phi):
	return sin(pi/180.0*phi)

def cosd(phi):
	return cos(pi/180.0*phi)


def ovector(v):
	xo=v[0,0]; yo=v[1,0]
	x=linspace(0,xo,10)
	y=yo/xo*x
	plot(x,y)



def rotx(phi):
	m=[[cosd(phi),sind(phi)],[-sind(phi),cosd(phi)]]
	m=matrix(m)
        return m

def vec(theta):
	return matrix([[cosd(theta)],[sind(theta)]])


v=vec(0)
ovector(v)
ovector(rotx(90)*v)
ovector(rotx(180)*v)
ovector(rotx(60)*v)
ovector(rotx(-60)*v)











