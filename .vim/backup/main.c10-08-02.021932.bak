//Obs.: Para clock de 4MHZ
void Delay1s(void){

		u8 count1;
		OPTION_REG=tmr0_1p32;	//Clock 1 por 32 , prescaler de 32 
		TMR0=0;					//Inicia o TMR0

		for(count1=0;count1<125;count1++) while(TMR0<250);	

}


