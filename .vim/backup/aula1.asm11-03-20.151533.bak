;;** RESET **
	org 0000h
	SJMP inicio
	
;;** INT0 **	
	;int0 
	org 0003h
	SJMP externa_0


;;** INT1 **
	;int1
	org 0013h
	SJMP externa_1


inicio:
	MOV IE,#0FFh;		Habilita todas ints
	MOV R0,#060h;
	MOV R1,#70h;

aguarda: SJMP 	$
	 sjmp aguarda
	 
				; Int externa 0
externa_0:
	MOV P0,#0FFh		; Desabilita mosfet de saída
	MOV A,P0		; Lê port0
	MOV @R0,A		; Guarda na RAM	
	INC R0			; Aponta para o próximo(RAM)
	RETI				
				
						;int externa 1
externa_1:
	MOV A,@R1		; Lê memória
	MOV P1,A		; Int externa 1
	INC R1			; Lê memória
	RETI			
	
	
END


			
