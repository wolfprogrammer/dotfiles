#include "delay.h"


typedef unsigned char u8;
typedef unsigned int  u16; 
typedef unsigned long u32;
typedef char i8;
typedef int  i16; 
typedef long i32;
typedef char *  string;
 

void delay1s(){
        
	u8 cont2;
	u16  cont1;

	// 183  0xFFFF
	for(cont2=240;cont2;cont2--)
		for(cont1=1530;cont2;cont2--);

}


void delaysx(u8 x){
	for(x;x;x--);
}


void delay500ms(){
	u8 c1 , c2 ,c3;

	for (c1=8;c1--;c1)
		for(c2=0xFF;c2;c2--)
			for(c3=0XFF;c3;c3--);
}
