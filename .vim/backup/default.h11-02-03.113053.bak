#ifndef	_default_h_
#define _default_h_


/* Data types*/


/*!
 *	\var typedef unsigned char u8
 *	\brief 8 bit unsigned integer , range: 0 to 255
 */
typedef unsigned char u8;
typedef unsigned char * pu8;

typedef char *  pchar;  // Ponteiro para caracter


/*!
 *	\var typedef signed char i8
 *	\brief 8 bit signed integer , range: -128 to 127
 */
typedef signed char s8;
typedef signed char * ps8;

typedef unsigned short int u16;
typedef signed short int s16;
typedef signed short int * ps16;

typedef unsigned long u32;
typedef signed 	 long s32;


#define eeprom __code

/* Data types constants */

#define MSB_8 	 7	// MSB position
#define MSB_16	15
#define MSB_32	31

					// Max number for each data type
#define MAX_u8		255
#define	MAX_s8		127
#define MAX_s16		65535


/* Bolean constants*/

#define HIGH 1
#define LOW  0

#define TRUE  1
#define FALSE 0

#define ON	1
#define OFF 0

#define YES 1
#define NOT 0

				/* Bit mask operations */

/**
	A function that set the nth's varible bit 
@param	var The variable that will be changed
@param bitno  The order of the bit that is desired to be seted
 
 
 */
#define bit_set(var,bitno)	((var)=1<<(bitno))

#define bit_clr(var,bitno)	(var)&=~(1<<(bitno))
#define bit_test(var,bitno)	((var)>>(bitno)&0x01)


#define bits_on(var,mask)	((var)|=(mask))
#define bits_off(var,mask) 	((var)&=~0^(mask))

#define lo_nibbles(x)	((x)&0x0F);
#define hi_nibbles(x)	((x)>>4);


// Bit Positions 8 bit number
#define bit0 	0
#define bit1 	1<<1
#define bit2	1<<2
#define bit3	1<<3
#define bit4	1<<4
#define bit5	1<<5
#define bit6	1<<6
#define bit7	1<<7





#endif


