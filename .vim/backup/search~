#!/bin/bash

FILE=`zenity --file-selection --directory --title="Select a File"`

name=$(zenity --entry  --title="Add an Entry" --text="Entre com o nome a procurar:" --entry-text "*.iso")

echo "Buscar arquivos em"$FILE
echo "Nome a procurar "$name

commandd="find $FILE -name $name > /tmp/searchlog" 
echo $commandd
screen  -X exec $commandd
screen  -X exec "leafpad /tmp/searchlog"
