function XT2=cftemp(T2,T1,XT1,a,mode=1)
%  XT2=cftemp(T2,T1,XT1,a,mode)
%
%Calcula o valor da grandeza XT2 a temperatura T2
%
%
%	T2 : Temperatura ºC ou K
%	T1 : Temperatura ºC ou K
%       XT1: Valor da grandeza a temperatura T2
%         a: Coeficiente de temperatura
%
%	 mode=  0 :  a em V/ºC  por exemplo
%	     =  1 :  a em %/ºC  por exemplo
%              default 0
%

switch mode
case 0
	XT2=XT1+a*(T2-T1);
case 1  
	XT2=XT1*(1+a/100*(T2-T1));
otherwise
end
