

startState=0;
ledOnState=1
ledOffState=2
buttonPressed=1
buttonNotPressed=0

state=startState;
input=buttonNotPressed;


while(1):
	# Obtem primeira entrada
	input=raw_input("Entre com a entrada \n1 button_pressed \n0 button_not_pressed\n");
	input=int(input)

	if state == startState:
		state=ledOnState;
	elif state == ledOnState:
		if input==buttonPressed:
			state=ledOffState
			print "Led Off"
	elif state == ledOffState:
		if input==buttonPressed:
			state=ledOffState
			print "Led On"
	


