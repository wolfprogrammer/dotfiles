#!/bin/bash


#	Project Wizard , To Help the lazy people to create fast projects with SDCC.
#  It's can creates a directory in pic-sdcc/pic16f with the name given by the user
#
#

maindir=$HOME/pic-sdcc		# Main directory
templates=$maindir/templates	# Template directory
projdir=$maindir/pic16f		# Project directory



echo "Project Wisard"
echo ""

echo "Basedir :"$maindir
echo "Template dir :"$template
echo "Project dir :"$projdir

projname=$(zenity --entry --text "Project Name" --entry-text "default"); 

project=$projdir"/$projname"

mkdir  -p $project

echo "Created :"$project

cd $project
cp $templates/main.c   .
cp $templates/Makefile .
cp $templates/Doxyfile .

ls $project

echo ""
echo "Don't forget of"
echo "git add $project"
echo ""

pcmanfm $project




#ls $project



#git add $project




