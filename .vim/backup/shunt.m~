## shunt

## Author: caio <caio@caio-Presario-C700-Notebook-PC>
## Created: 2012-11-26

clc

awg=AWG(-1);
AW=awg(:,1);	% Número AWG
MAXamps=awg(:,end); % Maxima corrente permitida

Rsh1=awg(:,6) ;  % Ohm/kFt
Rsh1=Rsh1/(1000*12*25.4);  % Ohm/mm
 
I=input('Entre com a máxima corrente A: ')


P=input('Entre com a maxima potência a ser dissipada W: ')
Rmax=P/I^2


% Comprimento do fio em mm
Lwire= Rmax./Rsh1;
V= I.*Rmax;

%format bank
AA=[ AW Lwire ];
AA=AA((MAXamps>I),:);   % Filtra os valores AWG que não ultrapassam a 
		     % maxima corrente permitida
disp('AWG Lwire ');
disp(AA);

Nawg= input('Escolha o AWG :')
printf('Especificação fio AWG Nº:%d - comprimento %.0f mm - %.3f Amps - %.3g mVolts\n - %.3f mOhms',Nawg,AA(Nawg+1,2),I,V,Rmax*1000)

% Entrada do amplificador em V
Vin=V

% Maxima saida do amplificador em Imax
Vout=1 %V
Rsh=Rmax 

% Ganho
G= Vout/Vin

ADCmax=1024
Vref=Vout
Vresol=Vref/ADCmax
Vr=Vresol/G
Iresol= Vr/Rmax





%{
ASK1= input('Recalcular ? 1-Sim 0-Não:');
if(ASK1==1)  
	     
	     NN=input('Entre com o número de condutores');
             Rsh2=Rsh1*NN;
	     Lwire= Rmax./Rsh2;
	     V= I.*Rsh2;
 	     AA=[ AW  Lwire V];
	     AA=AA((MAXamps>I),:);   % Filtra os valores AWG que não ultrapassam a 
 	     disp('AWG Lwire Vmax');
	     disp(AA);
	else
   	     return;
endif
%}








