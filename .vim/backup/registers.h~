#define LATA6  LATAbits.LATA6


//PORTA
//RA
#define RA0  PORTAbits.RA0
#define RA1  PORTAbits.RA1
#define RA2  PORTAbits.RA2
#define RA3  PORTAbits.RA3
#define RA4  PORTAbits.RA4
#define RA5  PORTAbits.RA5
