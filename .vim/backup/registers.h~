//---------- PORT D-------------//

#define TRISD0  TRISDbits.TRISD0
#define TRISD1  TRISDbits.TRISD1
#define TRISD2  TRISDbits.TRISD2
#define TRISD3  TRISDbits.TRISD3
#define TRISD4  TRISDbits.TRISD4
#define TRISD5  TRISDbits.TRISD5
