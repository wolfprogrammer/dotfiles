#define LowiNibbles(X)	(X)&0x0F	//Extrai os nibbles baixos de X
#define HigNibbles(X)	(X)>>4		//Extrai os nibbles altos de X

// Seta/Ativa o bit de ordem n , 0:LSB
#define setBit(file,n)  (file)|=(1<<(n))

// Limpa/Desativa o bit de ordem n , 0:LSB
#define clearBit(file,n) (file)&=~(1<<(n)


//Seta o nible alto de uma variável de 8 bits   b0-b1-b2-b3-b4-b5-b6-b7;
//{b4 b5 b6 b7} <== NIBBLE sem alterar os nibbles baixos
//
#define setHighNibble(X,VAR)	(VAR)=(VAR)&0x0F|((X)<<4)


#define setLowNibbles(X,VAR)	(VAR)=(VAR)&0xF0|(X)

